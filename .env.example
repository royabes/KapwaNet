# KapwaNet Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Django Backend
# =============================================================================

# SECURITY WARNING: Change this in production!
SECRET_KEY=change-me-to-a-secure-random-string

# Debug mode - set to False in production
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database
# =============================================================================

# PostgreSQL connection
DATABASE_URL=postgres://kapwanet:kapwanet@db:5432/kapwanet

# Individual database settings (used if DATABASE_URL is not set)
POSTGRES_DB=kapwanet
POSTGRES_USER=kapwanet
POSTGRES_PASSWORD=kapwanet
POSTGRES_HOST=db
POSTGRES_PORT=5432

# =============================================================================
# Frontend
# =============================================================================

# API URL for frontend to connect to backend
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# Email (Optional - for production)
# =============================================================================

# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=
# EMAIL_USE_TLS=True

# =============================================================================
# Storage (Optional - for production)
# =============================================================================

# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=kapwanet-media
# AWS_S3_REGION=us-east-1

# =============================================================================
# Security (Production)
# =============================================================================

# CORS origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# CSRF trusted origins
CSRF_TRUSTED_ORIGINS=http://localhost:3000
